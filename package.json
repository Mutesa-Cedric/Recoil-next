{
    "name": "recoil-next",
    "version": "0.2.0",
    "description": "Continuation of Recoil - A state management library for React",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "build:shared": "cd packages/shared && npm run build",
        "build:recoil": "cd packages/recoil && npm run build",
        "build:recoil-relay": "cd packages/recoil-relay && npm run build",
        "build:recoil-sync": "cd packages/recoil-sync && npm run build",
        "build:refine": "cd packages/refine && npm run build",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": ">=18"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-typescript": "^12.1.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/hamt_plus": "^1.0.0",
        "@types/node": "^18.15.3",
        "@types/react": "^18.2.39",
        "@types/react-dom": "^18.2.14",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@vitest/ui": "^2.1.8",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "hamt_plus": "^1.0.2",
        "jsdom": "^26.1.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-test-renderer": "^19.1.0",
        "rollup": "^4.0.0",
        "rollup-plugin-dts": "^6.2.1",
        "tslib": "^2.6.0",
        "typescript": "^5.4.2",
        "vitest": "^2.1.8"
    }
}
