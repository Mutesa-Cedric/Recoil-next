{
  "name": "recoil",
  "version": "0.1.0",
  "description": "Continuation of Recoil - A state management library for React",
  "author": {
    "name": "Mutesa Cedric",
    "email": "mutesacedric@gmail.com",
    "url": "https://github.com/Mutesa-Cedric"
  },
  "keywords": [
    "recoil",
    "state-management",
    "react",
    "state-management-library"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && npm publish"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "dependencies": {
    "hamt_plus": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/hamt_plus": "^1.0.0",
    "@types/node": "^18.15.3",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@vitest/ui": "^2.1.8",
    "bumpp": "^10.2.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jsdom": "^26.1.0",
    "react-test-renderer": "^19.1.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.6.0",
    "typescript": "^5.4.2",
    "vitest": "^2.1.8"
  },
  "repository": "https://github.com/Mutesa-Cedric/Recoil-next.git",
  "license": "MIT"
}