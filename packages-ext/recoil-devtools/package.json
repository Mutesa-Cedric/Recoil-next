{
  "name": "recoil-devtools",
  "version": "0.1.1",
  "description": "DevTools for the Recoil state management library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mutesa-Cedric/Recoil-next"
  },
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack-dev-server --mode development",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "pack": "npm run build && crx pack recoil_devtools_ext -o recoil_devtools_ext.crx -p"
  },
  "dependencies": {
    "@types/chrome": "^0.0.270",
    "classnames": "^2.5.1",
    "d3": "^7.9.0",
    "d3-array": "^3.2.4",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-transition": "^3.0.1",
    "immutable": "^4.3.7",
    "jsondiffpatch-for-react": "^1.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recoil-next": "^0.2.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/ui": "^3.2.4",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "crx": "^5.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "jsdom": "^26.1.0",
    "nullthrows": "^1.1.1",
    "prettier": "^3.4.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
